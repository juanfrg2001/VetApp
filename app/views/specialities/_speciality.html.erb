<div id="<%= dom_id speciality %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Location:</strong>
    <%= speciality.location_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Nombre:</strong>
    <%= speciality.nombre %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this speciality", speciality, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this speciality', edit_speciality_path(speciality), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
