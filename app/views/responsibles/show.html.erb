             <button class="ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium">
              <%= link_to 'Editar', edit_responsible_path(@responsible),  class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"  %>
