<p id="notice"><%= notice %></p>

<h1>Pacients</h1>

<table>
  <thead>
    <tr>
      <th>Locations</th>
      <th>Responsibles</th>
      <th>Species</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacients.each do |pacient| %>
      <tr>
        <td><%= pacient.locations_id %></td>
        <td><%= pacient.responsibles_id %></td>
        <td><%= pacient.species_id %></td>
        <td><%= link_to 'Show', pacient %></td>
        <td><%= link_to 'Edit', edit_pacient_path(pacient) %></td>
        <td><%= link_to 'Destroy', pacient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

